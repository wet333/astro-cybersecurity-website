---
interface Props {
    title: string;
    subtitle: string;
    sectionId: string;
}

const { title, subtitle = "Cybershield", sectionId} = Astro.props;
---

<div id={sectionId}>
    <p>{subtitle}</p>
    <h2>{title}</h2>
</div>

<style>
    * {
        color: var(--primary-color);
        margin: 0;
        padding: 0;
    }
    div {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 10px;
    }
    h2 {
        font-size: 2.8rem;
    }
    p {
        font-size: 1.4rem;
        filter: opacity(0.75);
    }
</style>
