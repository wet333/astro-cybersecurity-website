---
import Box from "./basics/Box.astro";
interface Props {
    title: string;
    description: string;
    image?: string;
    alt: string;
}

const { title, description, image, alt = "service_icon" } = Astro.props;
---

<li>
    <Box hoverable={true} clickable={true}>
        <div class="image-wrapper">
            {image && <img src={image} alt={alt}>}
        </div>
        <h3 class="title">{ title }</h3>
        <p class="description">{ description }</p>
    </Box>
</li>

<style>
    li {
        display: flex;
    }

    .image-wrapper {
        margin-bottom: var(--gap-size-1);
    }
    .title {
        font-size: 150%;
        margin: 0;
        color: var(--primary-color);
    }
    .description {
        margin: var(--gap-size-1) 0 0;
    }
</style>
