---
import contacts from '../data/contacts.json'
---

<nav>
    <div class="left-col">
        <div class="logotype">
            <img src="/images/shield.png" alt="Cyber Shield Logo" width="32px" height="32px">
            <span>Cybershield</span>
        </div>
        <div class="links">
            <a href="#about-section">About</a>
            <a href="#services-section">Services</a>
            <a href="#plans-section">Plans</a>
        </div>
    </div>
    <div class="right-col">
        <a class="contact-element"><i class="fa-regular fa-envelope"></i>{contacts.email}</a>
        <a class="contact-element"><i class="fa-solid fa-phone"></i>{contacts.phone}</a>
    </div>
</nav>

<style>
    nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        padding: 0.75rem 2rem;
        flex-wrap: wrap;
    }
    .left-col {
        flex: 2;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: flex-start;
    }
    .right-col {
        flex: 2;
        display: none;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-end;
    }
    .logotype {
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        flex-wrap: nowrap;
        gap: 0.5rem;
    }
    .logotype img {
        filter: saturate(0.5) brightness(1.3);
    }
    .logotype span {
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 700;
        color: var(--primary-color);
        font-size: 175%;
        margin-right: 2rem;
    }
    .links {
        display: none;
    }
    .links a {
        color: var(--font-color);
        text-decoration: none;
        padding: 4px;
        margin: 0 6px;
        cursor: pointer;
    }
    .links a:hover {
        color: var(--primary-color);
    }
    i {
        margin-right: 0.5rem;
        font-size: 115%;
    }
    .right-col a {
        color: var(--font-color);
        text-decoration: none;
        padding: 2px;
        cursor: pointer;
    }
    .right-col a:nth-child(n+2) {
        border-left: var(--border-color) solid 1px;
        padding-left: 0.5rem;
        margin-left: 0.5rem;
    }
    .right-col a:hover {
        color: var(--primary-color);
    }
    .contact-element {
        display: flex;
        align-items: center;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-start;
        text-wrap: nowrap;
    }

    @media screen and (min-width: 1024px) {
        .links {
            display: flex;
        }
    }

    @media screen and (min-width: 768px) {
        .right-col {
            display: flex;
        }
    }

</style>