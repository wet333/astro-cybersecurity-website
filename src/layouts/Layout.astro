---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon/shield.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Google Fonts -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;600;700;800;900&display=swap">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap">

		<!-- Add Fontawesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

		<!-- Add Tailwind CDN -->
		<script src="https://cdn.tailwindcss.com"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* Fonts */
		--font-color: #e9e9e9;
		--font-size: 16px;
		--font-weight-default: 300;

		/* Colors */
		--primary-color: #78bbed;
		--accent-color: #b878ed;
		--light-bg-color: #20242f;
		--border-color: #78bbed45;
		--mid-hover-color: #131b31;
		--mid-bg-color: #0d111a;
		--bg-color: #080a10;

		/* RGB Values */
		--font-color-rgb: 233, 233, 233;
		--primary-color-rgb: 120, 187, 237;
		--accent-color-rgb: 184, 120, 237;
		--light-bg-color-rgb: 32, 36, 47;
		--border-color-rgba: 120, 187, 237, 0.27;
		--mid-hover-color-rgb: 19, 27, 49;
		--mid-bg-color-rgb: 24, 27, 35;
		--bg-color-rgb: 8, 10, 16;

		/* Spaces */
		--border-radius: 4px;

		--gap-size-1: 12px;
		--gap-size-2: 20px;
		--gap-size-3: 32px;
	}

	html {
		font-family: 'Roboto', sans-serif;
		color: var(--font-color);
		background: var(--bg-color);
		font-size: var(--font-size);
		font-weight: var(--font-weight-default);
	}

	* {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Montserrat', sans-serif;
	}

	h1, h2 {
		font-weight: 700;
	}

	h3, h4, h5, h6 {
		font-weight: 500;
	}

	body {
		padding: 0;
		margin: 0;
	}

	p {
		line-height: 1.5rem;
	}
</style>
