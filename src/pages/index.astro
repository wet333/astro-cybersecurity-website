---
import Layout from "../layouts/Layout.astro"
import Services from "../layouts/sections/Services.astro"
import About from "../layouts/sections/About.astro"
import Prices from "../layouts/sections/Prices.astro"
import Hero from "../layouts/sections/Hero.astro";
import Contact from "../layouts/sections/Contact.astro";
import Footer from "../layouts/sections/Footer.astro";
import CaseStudies from "../layouts/sections/CaseStudies.astro";

const meta = {
    title: "Cybershield | Home",
    description: "Cybershield secures and monitors your company's cybersecurity, providing robust protection against threats and ensuring compliance in a rapidly evolving digital landscape.",
    url: 'https://astro-cybersecurity-website.vercel.app/',
    image: 'https://astro-cybersecurity-website.vercel.app/meta-image.webp'
};

---

<Layout meta={meta}>
    <Hero />
    <About />
    <Services />
    <CaseStudies />
    <Prices />
    <Contact />
    <Footer />
</Layout>

<style>
    * {
        color: whitesmoke;
    }
</style>