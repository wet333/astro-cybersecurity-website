import Layout from "../layouts/Layout.astro"
---

<Layout title="404 Not Found">
    <div>
        <h1>404 - Page Not Found</h1>
        <p>Sorry, the page you are looking for does not exist.</p>
        <p><a href="/">Go Home</a></p>
    </div>
</Layout>

<style>
    div {
        font-family: system-ui, sans-serif;
        text-align: center;
        padding: 50px;
        font-size: 20px;
        line-height: 1.6;
    }

    h1 {
        color: white;
    }

    p {
        color: whitesmoke;
    }
</style>